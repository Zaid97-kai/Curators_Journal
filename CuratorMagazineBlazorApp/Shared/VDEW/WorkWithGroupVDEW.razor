<div class="container my-4 bg-secondary bg-opacity-50">
    <div class="container-fluid">
        <BodySearchBar></BodySearchBar>
        <div class="overflow-auto container scroll">
            @if (_groups != null)
            {
                @if (_groups == null || _groups.Count == 0)
                {
                    <div class="row">
                        <div class="col-12">
                            <p><em>Loading...</em></p>
                        </div>
                    </div>

                }
                else
                {
                    foreach (var item in _groups)
                    {
                        @*if (item.Division?.Name == CurrentUser.Division?.Name)
                        {*@
                            <IndividualGroupVDEW Group="item"></IndividualGroupVDEW>
                        @*}*@
                    }
                }
            }
            else
            {
                //ChangeOnDefaultStateRoleNavBar();
            } 
        </div>
        <div class="row">
            <div class="row-md text-center mb-2">
                <hr>
                <button type="button" class="btn btn-secondary" @onclick="ModalAddGroupWindow">Добавить</button>
                @if (IsVisibleModalAddGroupWindow)
                {
                    <AddGroupModalWindow Visible="IsVisibleModalAddGroupWindow"></AddGroupModalWindow>
                }
                
            </div>
        </div>
    </div>
</div>
          