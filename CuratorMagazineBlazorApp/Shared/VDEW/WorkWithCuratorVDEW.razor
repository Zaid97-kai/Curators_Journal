<div class="container my-4 bg-secondary bg-opacity-50">
    <div class="container-fluid">
        <BodySearchBar></BodySearchBar>
        <div class="overflow-auto container scroll">
            @if (CurrentUser != null)
            {
                @if (_curators == null || _curators.Count == 0)
                {
                    <div class="row">
                        <div class="col-12">
                            <p><em>Loading...</em></p>
                        </div>
                    </div>
                }
                else
                {
                    foreach (var item in _curators)
                    {
                        @*if (item.Division?.Name == CurrentUser.Division?.Name && item.Role?.Name == "Curator")
                        {*@
                        <IndividualCuratorVDEW Curator="item"></IndividualCuratorVDEW>
                        @*}*@
                    }
                }
            }
            else
            {
                //ChangeOnDefaultStateRoleNavBar();
            }
        </div>
        <div class="row">
            <div class="row-md text-center mb-2">
                <hr>
                <button type="button" class="btn btn-secondary" @onclick="ModalAddCuratorWindow">Добавить</button>
                @if (IsVisibleModalAddCuratorWindow)
                {
                    <AddCuratorModalWindow Visible="IsVisibleModalAddCuratorWindow" ChangeVisible="ShowModalAddCuratorWindowParam"></AddCuratorModalWindow>
                }
            </div>
        </div>
    </div>
</div>