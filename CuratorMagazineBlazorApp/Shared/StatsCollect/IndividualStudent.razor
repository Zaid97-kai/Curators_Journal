<button class="row mt-3 mb-2 text-start border-0" data-bs-toggle="modal" data-bs-target="#studInfoModal">
    <div class="col-md-3">
        @if (Student?.ProfilePhoto == null)
        {
            <img class="rounded img-fluid" src="../img/no-img.jpg" alt="">
        }
        else
        {
            @*todo: Пометка надо придумать как фотку поставить*@
        }

    </div>
    <div class="col-md-8">
        <h5>@Student?.Name</h5>
