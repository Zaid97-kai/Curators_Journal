@using API.Models.Entities.Domains
<Modal Title="@("Изменение")"
       Visible="@Visible"
       OnOk="@HandleOk"
       OnCancel="@HandleCancel">
    <div class="container-fluid">
        <Form Model="@Group"
              OnFinish="OnFinish"
              OnFinishFailed="OnFinishFailed">
            <Row Gutter="24">
                <GridCol Span="11">
                    <img class="img-thumbnail" height="400px" width="400px" src="../img/no-img.jpg" alt="">
                    <FormItem>
                        <Button type="image" class="btn btn-outline-secondary mt-3">Обзор</Button>
                    </FormItem>
                </GridCol>
                <GridCol Span="13">
                    <FormItem Label="ФИО">
                        <Input @bind-Value="@context.Name" />
                    </FormItem>
                    <FormItem Label="Куратор">
                        <Select Mode="default"
                                DataSource="@_curators"
                                TItem="User"
                                TItemValue="string"
                                @bind-Value="@SelectedCuratorValue"
                                LabelName="@nameof(User.Name)"
                                ValueName="@nameof(User.Name)"
                                IgnoreItemChanges="false"
                                OnSelectedItemChanged="OnSelectedCuratorItemChangedHandler">
                        </Select>
                    </FormItem>
                </GridCol>
            </Row>
        </Form>
    </div>
</Modal>

