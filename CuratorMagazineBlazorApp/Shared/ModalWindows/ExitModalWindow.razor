@using API.Models.Entities.Domains
<div class="modal fade" aria-labelledby="signOutModelLabel" aria-hidden="true" tabindex="-1" id="signOutModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title">Подтверждение</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Вы уверены что хотите выйти?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Нет</button>
                <button type="button" class="btn btn-primary" @onclick="Exit">Да</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public User? CurrentUser { get; set; }

    [Parameter]
    public EventCallback<User> UserNullCallback { get; set; }

    public void Exit()
    {
        UserNullCallback.InvokeAsync();
    }
}
