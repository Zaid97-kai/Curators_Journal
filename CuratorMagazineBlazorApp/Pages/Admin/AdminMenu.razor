@using WebClient.Models.States
<Menu Mode=MenuMode.Horizontal OnMenuItemClicked="@ChangeState">
    <SubMenu Title="Справочники">
        <MenuItem Key="MenuItemDivision" Title="Подразделения">
            
        </MenuItem>        
        <MenuItem Key="MenuItemGroup" Title="Группы">
            
        </MenuItem>        
        <MenuItem Key="MenuItemParent" Title="Родители">
            
        </MenuItem>        
        <MenuItem Key="MenuItemRole" Title="Роли">
            
        </MenuItem>        
        <MenuItem Key="MenuItemUser" Title="Пользователи">
            
        </MenuItem>
    </SubMenu>
</Menu>

@if (_stateMenuItem == StateMenuItem.MenuItemDivision)
{
    <WebClient.Pages.Admin.Role.Division.MenuItemDivision></WebClient.Pages.Admin.Role.Division.MenuItemDivision>
}
else if (_stateMenuItem == StateMenuItem.MenuItemUser)
{
    <WebClient.Pages.Admin.Role.User.MenuItemUser></WebClient.Pages.Admin.Role.User.MenuItemUser>
}
else if (_stateMenuItem == StateMenuItem.MenuItemGroup)
{
    <WebClient.Pages.Admin.Role.Group.MenuItemGroup></WebClient.Pages.Admin.Role.Group.MenuItemGroup>
}
else if (_stateMenuItem == StateMenuItem.MenuItemParent)
{
    <WebClient.Pages.Admin.Role.Parent.MenuItemParent></WebClient.Pages.Admin.Role.Parent.MenuItemParent>
}
else if (_stateMenuItem == StateMenuItem.MenuItemRole)
{
    <WebClient.Pages.Admin.Role.Role.MenuItemRole></WebClient.Pages.Admin.Role.Role.MenuItemRole>
}

@code
{
    private StateMenuItem _stateMenuItem = StateMenuItem.MenuItemDefault;

    public void ChangeState(MenuItem e)
    {
        switch (e.Key)
        {
            case "MenuItemDivision":
                _stateMenuItem = StateMenuItem.MenuItemDivision;
                break;
            case "MenuItemGroup":
                _stateMenuItem = StateMenuItem.MenuItemGroup;
                break;
            case "MenuItemParent":
                _stateMenuItem = StateMenuItem.MenuItemParent;
                break;
            case "MenuItemRole":
                _stateMenuItem = StateMenuItem.MenuItemRole;
                break;
            case "MenuItemUser":
                _stateMenuItem = StateMenuItem.MenuItemUser;
                break;
            default:
                break;
        }
    }
}