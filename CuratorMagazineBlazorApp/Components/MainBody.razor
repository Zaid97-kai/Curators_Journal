@switch (@StateRoleNavBar?.RoleName)
{
    case "WorkWithVDEW":
        <WebClient.Components.DEW.WorkWithVDEW CurrentUser="CurrentUser"></WebClient.Components.DEW.WorkWithVDEW>
        break;
    case "StatsCollect":
        <WebClient.Components.StatsCollect.StatsCollect CurrentUser="CurrentUser"></WebClient.Components.StatsCollect.StatsCollect>
        break;
    case "WorkWithGroupVDEW":
        <WebClient.Components.VDEW.WorkWithGroupVDEW CurrentUser="CurrentUser" ></WebClient.Components.VDEW.WorkWithGroupVDEW>
        break;
    case "StatsCollectionPage":
        <WebClient.Components.StatsCollect.StatsCollectionPage CurrentUser="CurrentUser"></WebClient.Components.StatsCollect.StatsCollectionPage>
        break;
    case "WorkWithCuratorVDEW":
        <WebClient.Components.VDEW.WorkWithCuratorVDEW CurrentUser="CurrentUser"></WebClient.Components.VDEW.WorkWithCuratorVDEW>
        break;
    default:
        <CarouselComponent></CarouselComponent>
        <Introduction></Introduction>
        break;
}

@code {
    [Parameter]
    public User? CurrentUser { get; set; }

    [Parameter]
    public Group? Group { get; set; }

    [Parameter]
    public StateRoleNavBar? StateRoleNavBar { get; set; }

    [Parameter]
    public EventCallback<StateRoleNavBar> StateRoleNavBarCallback { get; set; }
}
